<div class="container-xl px-4 mt-4" style="height:100vh">
	<div class="row">
		<div
			class="col-xl-4">
			<!-- Profile picture card-->
			<div class="card mb-4 mb-xl-0">
				<div class="card-header">Profile</div>
				<div
					class="card-body text-center">
					<!-- Profile picture image-->
					<i class="bi bi-person-circle display-1"></i>
					<!-- Profile picture help block-->
					<div class="small font-italic text-muted mb-4">JPG or PNG no larger than 5 MB</div>
					<!-- Profile picture upload button-->
					<button class="btn btn-success" type="button">Upload new image</button>
				</div>
			</div>
		</div>
		<div class="col-xl-8">
			<div class="card mb-4">
				<div class="card-header">Details du compte</div>
				<div class="card-body">
					<form method="post" action="{{ path('app_user_edit', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to update this item?');">
						<div
							class="row gx-3 mb-3">
							<!-- Form Group (first name)-->
							<div class="col-md-6">
								<label class="small mb-1" for="inputFirstName">Nom</label>
								<input class="form-control" name="nom" type="text" placeholder="Entrer votre nom" value="{{user.nom}}">
							</div>
							<!-- Form Group (last name)-->
							<div class="col-md-6">
								<label class="small mb-1" for="inputLastName">Prenom</label>
								<input class="form-control" name="prenom" type="text" placeholder="Entrer votre prenon" value="{{user.prenom}}">
							</div>
						</div>
						<!-- Form Group (email address)-->
						<div class="mb-3">
							<label class="small mb-1" for="inputEmailAddress">Email</label>
							<input class="form-control" name="email" type="email" placeholder="Entrer votre adresse email" value="{{user.email}}">
						</div>
						<div class="mb-3">
							<label class="small mb-1" for="inputpPassWor">Mot de passe</label>
							<input class="form-control" name="password" type="password" placeholder="" value="{{user.password}}">
						</div>
						<!-- Form Row-->
						<div
							class="row gx-3 mb-3">
							<!-- Form Group (phone number)-->
							<div class="col-md-6">
								<label class="small mb-1" for="inputPhone">Numéro de téléphone</label>
								<input class="form-control" name="numero" type="tel" placeholder="Entrer votre numéro de téléphone" value="{{user.numero}}">
							</div>
							<!-- Form Group (birthday)-->
							<div class="col-md-6">
								<label class="small mb-1" for="inputBirthday">Date d'inscription (Non modifiable)</label>
								<input class="form-control" name="dateinscription" type="date" disabled name="birthday" placeholder="" value="{{user.dateinscription|date('m/d/Y')}}">
							</div>
						</div>
						<input type="hidden" name="_token" value="{{ csrf_token('edit' ~ user.id) }}">
						<button class="btn btn-success" type="submit">Enregsitrer les changements</button>
					</form>
					<!-- Save changes button-->
					<div class="d-flex">
						<form method="post" class="ms-auto d-flex" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
							<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
							<button class="ms-auto btn btn-danger" type="button">Supprimer mon compte</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
